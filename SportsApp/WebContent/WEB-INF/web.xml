<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>SportsApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  <servlet-name>sportData</servlet-name>
  <servlet-class>com.hibernate.app.SportsData</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>sportData</servlet-name>
  <url-pattern>/sportData</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>sportSearch</servlet-name>
  <servlet-class>com.hibernate.app.SportSearch</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>sportSearch</servlet-name>
  <url-pattern>/sportSearch</url-pattern>
  </servlet-mapping>
</web-app>